# ========================================
# EJEMPLO DE CONFIGURACIÓN - COPIA A config.env
# ========================================
# 
# 1. CONFIGURAR TU CLUSTER OPENSHIFT
# ========================================
# 
# Obtén tu token con: oc whoami -t
# Reemplaza con tu token real
OPENSHIFT_TOKENS=sha256~TU_TOKEN_AQUI

# URL de Prometheus (reemplaza con tu URL real)
# Ejemplo: https://prometheus-k8s-openshift-monitoring.apps.tu-cluster.com
PROMETHEUS_URLS=https://prometheus-k8s-openshift-monitoring.apps.tu-cluster.com

# URL de Alertmanager (reemplaza con tu URL real)
# Ejemplo: https://alertmanager-main-openshift-monitoring.apps.tu-cluster.com
ALERTMANAGER_URLS=https://alertmanager-main-openshift-monitoring.apps.tu-cluster.com

# Nombres de clusters (separar múltiples con comas)
# Ejemplo: mi-cluster-produccion,mi-cluster-desarrollo
CLUSTER_NAMES=mi-cluster-produccion

# ========================================
# 2. CONFIGURACIÓN DEL BOT DE TELEGRAM
# ========================================
# 
# Token del bot (ya configurado)
TELEGRAM_BOT_TOKEN=8341369683:AAHP223XV5_TZXVjsrSk6bzqLwmNB8f9wb4

# Tu ID de usuario de Telegram (reemplaza con tu ID real)
# Para obtenerlo: envía /start al bot @userinfobot
TELEGRAM_AUTHORIZED_USERS=123456789

# Habilitar notificaciones
TELEGRAM_NOTIFICATIONS_ENABLED=true
TELEGRAM_ALERT_NOTIFICATIONS=true
TELEGRAM_STATUS_NOTIFICATIONS=true

# ========================================
# 3. CONFIGURACIÓN DE MONITOREO (OPCIONAL)
# ========================================
# 
# Intervalos en segundos
MONITORING_INTERVAL=300
REPORT_INTERVAL=3600
ALERT_CHECK_INTERVAL=60

# Umbrales de alerta (%)
MEMORY_WARNING_THRESHOLD=80
MEMORY_CRITICAL_THRESHOLD=90
CPU_WARNING_THRESHOLD=70
CPU_CRITICAL_THRESHOLD=85
DISK_WARNING_THRESHOLD=70
DISK_CRITICAL_THRESHOLD=85

# ========================================
# 4. CONFIGURACIÓN DE ALMACENAMIENTO
# ========================================
# 
REPORTS_DIRECTORY=/app/reports
LOGS_DIRECTORY=/app/logs
BACKUP_REPORTS=true
MAX_REPORTS_AGE_DAYS=30

# ========================================
# 5. CONFIGURACIÓN DE LOGGING
# ========================================
# 
LOG_LEVEL=INFO
LOG_FORMAT=detailed 