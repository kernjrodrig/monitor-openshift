TELEGRAM_STATUS_NOTIFICATIONS=true

# ========================================
# 3. CONFIGURACIÓN DE MONITOREO (OPCIONAL)
# ========================================
# 
# Intervalos en segundos
MONITORING_INTERVAL=300
REPORT_INTERVAL=3600

# Sistema de alertas inteligentes (en lugar de resumen automático)
TELEGRAM_AUTO_SUMMARY=false
TELEGRAM_SMART_ALERTS=true
TELEGRAM_RECOVERY_NOTIFICATIONS=true

# Umbrales de alerta (%)
