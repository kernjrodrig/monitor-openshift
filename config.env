MEMORY_CRITICAL_THRESHOLD=90
CPU_WARNING_THRESHOLD=70
CPU_CRITICAL_THRESHOLD=85
DISK_WARNING_THRESHOLD=70
DISK_CRITICAL_THRESHOLD=85

# ========================================
# 4. CONFIGURACIÓN DE ALMACENAMIENTO
# ========================================
# 
REPORTS_DIRECTORY=/app/reports
LOGS_DIRECTORY=/app/logs
BACKUP_REPORTS=true
MAX_REPORTS_AGE_DAYS=30

# ========================================
# 5. CONFIGURACIÓN DE LOGGING
# ========================================
# 
LOG_LEVEL=INFO
LOG_FORMAT=detailed
